<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Horários</h1>
  </div>
</div><!--/.row-->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked home"><use xlink:href="#stroked-home"/></svg> <%= @campus.sigla %>
          </div>
          <div class="col-md-4">
            <%= link_to('Adicionar horário', new_admin_campus_campus_schedule_path, class: 'btn btn-success pull-right') %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import">
          <thead>
            <th>Turno</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Ações</th>
            <!-- <th colspan="3"></th> -->
          </thead>

          <tbody>
            <% @campus_schedules.each do |campus_schedule| %>
            <tr>
              <td><%= campus_schedule.shift %></td>
              <td><%= campus_schedule.start.strftime("%H:%M") %></td>
              <td><%= campus_schedule.end.strftime("%H:%M") %></td>
              <td>
                <%= link_to t('Remove'), admin_campus_campus_schedule_path(campus_schedule.campus, campus_schedule), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                </td>
            </tr>
            <% end %>
          </tbody>

        </table>
        <nav>
        <ul class="pager">
           <%= page_entries_info @campus_schedules %>
           <br>
          <li><%= will_paginate @campus_schedules, :page_links => false, :container => false %></li>
        </ul>
      </nav>
      </div>
    </div>
  </div>

</div>
