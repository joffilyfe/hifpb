<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"/></svg> Laboratórios
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import" data-search="true" data-pagination="true">
          <thead>
            <th>Matricula</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Campus</th>
            <th>Departamento</th>
            <th>Ações</th>
          </thead>

          <tbody>
            <% @teachers.each do |teacher| %>
            <tr>
              <td><%= teacher.id %></td>
              <td><%= teacher.name %></td>
              <td><%= teacher.mail %></td>
              <td><%= teacher.campus %></td>
              <td><%= teacher.department %></td>
              <td style="text-align:center">
                <%= link_to admin_report_teacher_path(teacher), class: "btn btn-default" do %>
                <span>Ver horarios</span>
                <% end %>
              </td>
            </tr>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
